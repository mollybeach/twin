{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@/dbschema/*": [
        "dbschema/*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "components/**/*",
    "lib/**/*",
    "types/**/*",
    "styles/**/*",
    "src/**/*",
    "dbschema/**/*",
    "src/training/**/*",
    "src/scripts/**/*",
    "src/index.ts",
    "src",
    "server/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
