{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@/dbschema/*": [
        "dbschema/*"
      ],
      "@/dbschema/edgeql-js/*": [
        "dbschema/edgeql-js/*"
      ],
      "@/dbschema/edgeql-js/modules/*": [
        "dbschema/edgeql-js/modules/*"
      ],
      "@/server/*": [
        "server/*"
      ],
      "@/types/*": [
        "types/*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "next-env.d.ts",
    "edgeql-js.d.ts",
    ".next/types/**/*.ts",
    "components/**/*",
    "types/**/*",
    "styles/**/*",
    "dbschema/**/*",
    "dbschema/edgeql-js/**/*",  
    "dbschema/edgeql-js/modules/**/*",
    "server/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
